{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "func-names": "off",
    "object-shorthand": "off",
    "no-param-reassign": "off",
    "no-nested-ternary": "off",
    "consistent-return": "off",
    "no-console": "off",
    "no-alert": "off",
    "no-await-in-loop": "off"
  }
}
